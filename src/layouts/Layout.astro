---
import '../styles/global.css';
import '@fontsource/inter/400.css';
import '@fontsource/inter/500.css';
import '@fontsource/inter/600.css';
import '@fontsource/inter/700.css';

interface Props {
	title: string;
}

import { getAssetPath } from '../utils/url.js';
const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Revive - Science-backed recovery drink. Wake up refreshed after a night out." />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="theme-color" content="#001a16" />
		<link rel="icon" type="image/svg+xml" href={getAssetPath("favicon.svg")} />
		<title>{title}</title>
	</head>
	<body class="antialiased">
		<slot />
	</body>
</html>

<style is:global>
	html {
		scroll-behavior: smooth;
	}
</style>
