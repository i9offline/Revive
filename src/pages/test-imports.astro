---
// Test page using Astro image imports
import ReviveLogo from '/Revive-Logo.png';
import ReviveProduct from '/Revive-Product.png';
---

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Image Import Test - Revive</title>
</head>
<body>
    <h1>Image Import Test</h1>
    
    <h2>BASE_URL: {import.meta.env.BASE_URL}</h2>
    
    <h3>Logo via Import:</h3>
    <img src={ReviveLogo.src} alt="Revive Logo" style="width: 200px; border: 2px solid red;">
    <p>Import path: {ReviveLogo.src}</p>
    
    <h3>Product via Import:</h3>
    <img src={ReviveProduct.src} alt="Revive Product" style="width: 200px; border: 2px solid blue;">
    <p>Import path: {ReviveProduct.src}</p>
    
    <h3>BASE_URL method:</h3>
    <img src={`${import.meta.env.BASE_URL}Revive-Logo.png`} alt="BASE_URL Logo" style="width: 200px; border: 2px solid yellow;">
    <p>BASE_URL path: {`${import.meta.env.BASE_URL}Revive-Logo.png`}</p>
    
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
            background: #1E5631;
            color: #defe55;
        }
        img {
            margin: 10px 0;
        }
        p {
            margin: 5px 0;
            font-size: 14px;
            color: #ccc;
        }
    </style>
</body>
</html>
