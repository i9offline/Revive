---
const features = [
  { name: "All-in-one Formula", revive: true, electrolytes: false, pills: false },
  { name: "Liver Support", revive: true, electrolytes: false, pills: false },
  { name: "Natural Ingredients", revive: true, electrolytes: true, pills: false },
  { name: "Instant Hydration", revive: true, electrolytes: true, pills: false },
  { name: "No Pills to Swallow", revive: true, electrolytes: true, pills: false },
  { name: "Delicious Taste", revive: true, electrolytes: false, pills: false },
];
---

<section class="py-32 px-6 relative overflow-hidden">
  <div class="max-w-5xl mx-auto">
    <h2 class="text-4xl md:text-5xl font-bold text-center text-white mb-20 tracking-tight">Why Choose <span class="text-[#c8e321]">Revive</span>?</h2>

    <div class="relative overflow-x-auto py-12">
      <!-- Container with background for the whole table -->
      <div class="min-w-[700px] bg-[#fbf9f1] rounded-[2rem] p-6 text-[#184441] relative">
        
        <!-- The Highlighted Column Background (Absolute positioning to span full height) -->
        <!-- Positioned for the 2nd column in a 4-column layout (25% width each) -->
        <!-- Center of 2nd column is at 37.5% -->
        <div class="absolute top-[-1.5rem] bottom-[-1.5rem] left-[37.5%] -translate-x-1/2 w-1/4 bg-[#c8e321] rounded-[1.5rem] shadow-2xl transform scale-y-100 z-10"></div>

        <table class="w-full text-left border-collapse relative z-20">
          <thead>
            <tr>
              <th class="p-4 w-1/4"></th> <!-- Empty top left -->
              <th class="p-4 w-1/4 text-center pb-6">
                <div class="text-[#184441] font-bold text-2xl">Revive</div>
              </th>
              <th class="p-4 w-1/4 text-center pb-6">
                <div class="text-[#184441]/60 font-bold text-lg">Electrolytes</div>
              </th>
              <th class="p-4 w-1/4 text-center pb-6">
                <div class="text-[#184441]/60 font-bold text-lg">Pills</div>
              </th>
            </tr>
          </thead>
          <tbody class="space-y-4">
            {features.map((feature, index) => (
              <tr class="border-b border-[#184441]/10 last:border-0">
                <!-- Feature Name -->
                <td class="p-4 font-bold text-base w-1/4">{feature.name}</td>
                
                <!-- Revive Column (Checkmarks) -->
                <td class="p-4 text-center w-1/4">
                  <div class="flex justify-center items-center">
                    <div class="w-6 h-6 rounded-full border-2 border-black flex items-center justify-center text-black">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="3" stroke="currentColor" class="w-4 h-4">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                      </svg>
                    </div>
                  </div>
                </td>

                <!-- Electrolytes Column -->
                <td class="p-4 text-center w-1/4">
                  <div class="flex justify-center items-center">
                    {feature.electrolytes ? (
                      <div class="text-[#184441]">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-5 h-5">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                        </svg>
                      </div>
                    ) : (
                      <div class="text-[#184441]/40">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-5 h-5">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                      </div>
                    )}
                  </div>
                </td>

                <!-- Pills Column -->
                <td class="p-4 text-center w-1/4">
                  <div class="flex justify-center items-center">
                    {feature.pills ? (
                      <div class="text-[#184441]">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-5 h-5">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                        </svg>
                      </div>
                    ) : (
                      <div class="text-[#184441]/40">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-5 h-5">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                      </div>
                    )}
                  </div>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
