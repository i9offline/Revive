---
const features = [
  { name: "All-in-one Formula", revive: true, electrolytes: false, pills: false },
  { name: "Liver Support", revive: true, electrolytes: false, pills: true },
  { name: "Natural Ingredients", revive: true, electrolytes: true, pills: false },
  { name: "Instant Hydration", revive: true, electrolytes: true, pills: false },
  { name: "No Pills to Swallow", revive: true, electrolytes: true, pills: false },
  { name: "Delicious Taste", revive: true, electrolytes: false, pills: false },
];
---

<section class="py-32 px-6 relative">
  
  <div class="max-w-4xl mx-auto">
    
    <!-- Header -->
    <div class="text-center mb-12">
      <p class="text-[#c8e321] text-sm font-medium uppercase tracking-wider mb-4">Compare</p>
      <h2 class="text-4xl md:text-5xl font-bold text-white">
        Why Revive?
      </h2>
    </div>

    <!-- Table -->
    <div class="w-full">
      <table class="w-full">
        <thead>
          <tr class="border-b border-white/10">
            <th class="text-left py-4 text-white/40 text-xs md:text-sm font-medium pr-2"></th>
            <th class="py-4 text-center px-2 md:px-4">
              <span class="text-[#c8e321] font-bold text-xs md:text-base">Revive</span>
            </th>
            <th class="py-4 text-center px-2 md:px-4">
              <span class="text-white/40 font-medium text-xs md:text-base">Electrolytes</span>
            </th>
            <th class="py-4 text-center px-2 md:px-4">
              <span class="text-white/40 font-medium text-xs md:text-base">Pills</span>
            </th>
          </tr>
        </thead>
        <tbody>
          {features.map((feature) => (
            <tr class="border-b border-white/5">
              <td class="py-3 md:py-4 text-white/70 text-xs md:text-base pr-2">{feature.name}</td>
              <td class="py-3 md:py-4 text-center px-2 md:px-4">
                {feature.revive ? (
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 md:w-5 md:h-5 text-[#c8e321] mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                  </svg>
                ) : (
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 md:w-5 md:h-5 text-white/20 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                  </svg>
                )}
              </td>
              <td class="py-3 md:py-4 text-center px-2 md:px-4">
                {feature.electrolytes ? (
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 md:w-5 md:h-5 text-white/40 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                  </svg>
                ) : (
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 md:w-5 md:h-5 text-white/20 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                  </svg>
                )}
              </td>
              <td class="py-3 md:py-4 text-center px-2 md:px-4">
                {feature.pills ? (
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 md:w-5 md:h-5 text-white/40 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                  </svg>
                ) : (
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 md:w-5 md:h-5 text-white/20 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                  </svg>
                )}
              </td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>

  </div>
</section>
