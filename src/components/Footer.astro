---
import { Image } from 'astro:assets';
import logoImage from '../assets/images/revive-logo-v2.png';
---
<footer class="py-16 px-6 border-t border-white/5 bg-white/5 backdrop-blur-xl">
  <div class="max-w-7xl mx-auto flex flex-col items-center gap-8">
    <div>
      <Image src={logoImage} alt="Revive" class="h-8 w-auto" />
    </div>
    
    <div class="flex gap-10 text-white/70 font-medium text-sm">
      <a href="#" class="hover:text-white hover:underline transition-all duration-300">Privacy Policy</a>
      <a href="#" class="hover:text-white hover:underline transition-all duration-300">Terms of Service</a>
      <a href="#" class="hover:text-white hover:underline transition-all duration-300">Contact</a>
    </div>
    
    <div class="text-white/50 text-sm font-light">
      &copy; {new Date().getFullYear()} Revive. All rights reserved.
    </div>
  </div>
</footer>
