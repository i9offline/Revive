---
const steps = [
  {
    title: "Social Drinking",
    description: "Enjoying the night, but toxins build up.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 text-[#184441]">
  <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 8.25h9m-9 3H12m-9.75 1.51c0 1.6 1.123 2.994 2.707 3.227 1.129.166 2.27.293 3.423.379.35.026.67.21.865.501L12 21l2.755-4.133a1.14 1.14 0 01.865-.501 48.172 48.172 0 003.423-.379c1.584-.233 2.707-1.626 2.707-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0012 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018z" />
</svg>`
  },
  {
    title: "Brain Fog",
    description: "The next morning struggle. Sluggishness and dehydration.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 text-[#184441]">
  <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z" />
</svg>`
  },
  {
    title: "Revive Clarity",
    description: "Next-morning restoration. Sharp, focused, and ready.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 text-[#184441]">
  <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.263l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" />
</svg>`
  }
];
---

<section class="py-32 px-6 relative overflow-hidden">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-4xl md:text-5xl font-bold text-center text-[#184441] mb-24 tracking-tight">The Journey to <span class="text-[#c8e321]">Clarity</span></h2>
    
    <div class="relative ml-4 md:ml-0 md:pl-0 space-y-16">
      <!-- Simple Vertical Line -->
      <div class="absolute left-0 top-0 bottom-0 w-px bg-[#184441]/10 md:left-1/2 md:-ml-px"></div>

      {steps.map((step, index) => (
        <div class="relative pl-12 md:pl-0 md:grid md:grid-cols-2 md:gap-16 items-center group">
          <!-- Timeline Dot -->
          <div class="absolute left-[-5px] top-1/2 -translate-y-1/2 md:left-1/2 md:-ml-1.5 z-10">
             <div class="w-2.5 h-2.5 rounded-full bg-[#c8e321] ring-4 ring-[#fbf9f1] group-hover:scale-125 transition-transform duration-300 shadow-sm"></div>
          </div>

          <!-- Content -->
          <div class={`${index % 2 === 0 ? 'md:text-right' : 'md:col-start-2'}`}>
            <div class={`glass-card p-6 md:p-8 hover:bg-white/60 border-[#184441]/5 flex items-center gap-4 md:gap-6 ${index % 2 === 0 ? 'md:mr-8 md:flex-row-reverse' : 'md:ml-8 md:flex-row'}`}>
              <div class="shrink-0 opacity-80 p-3 bg-[#184441]/5 rounded-2xl" set:html={step.icon}></div>
              <div>
                <h3 class="text-xl md:text-2xl font-semibold text-[#184441] mb-2">{step.title}</h3>
                <p class="text-[#184441]/70 font-light leading-relaxed text-sm md:text-base">{step.description}</p>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
