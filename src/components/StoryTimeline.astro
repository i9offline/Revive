---
const steps = [
  {
    title: "Social Drinking",
    description: "Enjoying the night with friends. Toxins build up.",
    emoji: "üç∑"
  },
  {
    title: "Brain Fog",
    description: "The morning without Revive. Headaches and zero energy.",
    emoji: "üòµ"
  },
  {
    title: "Revive Clarity",
    description: "Wake up refreshed. Sharp, focused, and ready.",
    emoji: "‚ú®"
  }
];
---

<section id="how-it-works" class="py-32 px-6 relative">
  
  <div class="max-w-4xl mx-auto">
    
    <!-- Header -->
    <div class="text-center mb-20">
      <p class="text-[#c8e321] text-sm font-medium uppercase tracking-wider mb-4">The Journey</p>
      <h2 class="text-4xl md:text-5xl font-bold text-white">
        From night out to clarity
      </h2>
    </div>

    <!-- Steps -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-4">
      {steps.map((step, index) => (
        <div class="text-center relative">
          
          <!-- Connector line (desktop) -->
          {index < steps.length - 1 && (
            <div class="hidden md:block absolute top-8 left-[60%] w-[80%] h-px bg-gradient-to-r from-white/20 to-white/5"></div>
          )}
          
          <!-- Emoji -->
          <div class="text-6xl mb-6">{step.emoji}</div>
          
          <!-- Content -->
          <h3 class={`text-xl font-semibold mb-2 ${index === 2 ? 'text-[#c8e321]' : 'text-white'}`}>
            {step.title}
          </h3>
          <p class="text-white/50 text-sm leading-relaxed max-w-xs mx-auto">
            {step.description}
          </p>
        </div>
      ))}
    </div>

  </div>
</section>
