---
import { Image } from 'astro:assets';
import drinkingImage from '../assets/images/revive-drinking.jpg';
---

<section id="benefits" class="py-32 px-6 relative overflow-hidden">
  
  <div class="max-w-6xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-16 lg:gap-24 items-center">
    
    <!-- Left Column: Image -->
    <div class="relative">
      <div class="relative rounded-3xl overflow-hidden aspect-[4/5]">
        <Image 
          src={drinkingImage} 
          alt="Revive Lifestyle" 
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-[#001a16] via-transparent to-transparent"></div>
      </div>
    </div>

    <!-- Right Column: Text Content -->
    <div class="flex flex-col space-y-12">
      
      <div class="space-y-6">
        <p class="text-[#c8e321] text-sm font-medium uppercase tracking-wider">How It Works</p>
        <h2 class="text-4xl md:text-5xl font-bold text-white leading-tight">
          Your journey to better mornings
        </h2>
      </div>

      <!-- Timeline -->
      <div class="space-y-10">
        
        <!-- Item 1 -->
        <div class="flex gap-6">
          <div class="shrink-0 w-12 h-12 rounded-full bg-[#c8e321] flex items-center justify-center text-[#00251f] font-bold">
            1
          </div>
          <div>
            <p class="text-[#c8e321] text-sm font-medium mb-2">Before Bed</p>
            <h3 class="text-xl font-semibold text-white mb-2">Drink one shot</h3>
            <p class="text-white/50 leading-relaxed">
              Take Revive right before sleep. Our formula starts working immediately.
            </p>
          </div>
        </div>

        <!-- Item 2 -->
        <div class="flex gap-6">
          <div class="shrink-0 w-12 h-12 rounded-full bg-[#c8e321]/20 border border-[#c8e321]/30 flex items-center justify-center text-[#c8e321] font-bold">
            2
          </div>
          <div>
            <p class="text-[#c8e321] text-sm font-medium mb-2">While You Sleep</p>
            <h3 class="text-xl font-semibold text-white mb-2">Recovery mode</h3>
            <p class="text-white/50 leading-relaxed">
              Your liver gets support, your body rehydrates deeply.
            </p>
          </div>
        </div>

        <!-- Item 3 -->
        <div class="flex gap-6">
          <div class="shrink-0 w-12 h-12 rounded-full bg-[#c8e321]/20 border border-[#c8e321]/30 flex items-center justify-center text-[#c8e321] font-bold">
            3
          </div>
          <div>
            <p class="text-[#c8e321] text-sm font-medium mb-2">Next Morning</p>
            <h3 class="text-xl font-semibold text-white mb-2">Wake up fresh</h3>
            <p class="text-white/50 leading-relaxed">
              No headache, no brain fog. Ready to seize the day.
            </p>
          </div>
        </div>

      </div>

    </div>

  </div>
</section>
