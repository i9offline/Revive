<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const player = cloudinary.videoPlayer('player', {
      cloudName: 'dmzjyf3mn',
      publicId: 'revive-video_o9rtvv',
      autoplay: true,
      loop: true,
      muted: true,
      controls: false,
      hideContextMenu: true
    });
  });
</script>
