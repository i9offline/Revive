  <div class="absolute inset-0 bg-gradient-to-b from-transparent via-[#c8e321]/5 to-transparent pointer-events-none"></div>
  
  <div class="relative w-full max-w-7xl aspect-video rounded-3xl overflow-hidden group shadow-xl transform-gpu">
    <video
      id="player"
      class="cld-video-player cld-fluid w-full h-full object-cover"
